                //  .site-form__row
                //    .site-form__col
                //      .site-form__input
                //        input(type="text" placeholder="Владелец карты").required
                //  .site-form__row
                //    .site-form__col
                //      .site-form__input
                //        input(type="text" placeholder="Номер карты").required
                //    .site-form__col
                //      .site-form__input
                //        input(type="text" placeholder="мм/гг*").required
