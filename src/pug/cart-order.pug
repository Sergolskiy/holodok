                  //  .custom-tab__head Выберите способ оплаты
                  //  .custom-tab__body
                  //    .cart__pay-item
                  //      a(href="#").cart__pay-link Наложенный платеж
                  //    .cart__pay-item
                  //      a(href="#").cart__pay-link Картой Visa/MasterCard онлайн
              //.cart__order-form.site-form
